@using Microsoft.AspNetCore.Identity
@{
    var userName = User.Identity.Name; // Obtiene el nombre de la identidad
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - e_Commerce.Muebles.WebCliente</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/e_Commerce.Muebles.WebCliente.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css" />
</head>
<body>
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand d-flex align-items-center text-white" asp-controller="Home" asp-action="Index">
                    <img src="img/ecom.jpg" alt="Logo" style="height: 60px; width: auto;" class="me-2">
                    UNLZ
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active text-white" aria-current="page" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li>
                            <a class="nav-link text-white" asp-area="" asp-controller="Productos" asp-action="Index">
                                <i class="bi bi-grid"></i> Lista Producto
                            </a>
                        </li>
                    </ul>
                    <form class="d-flex bg-white" action="@Url.Action("Carrito", "Carrito")" method="get">
                        <button class="btn btn-outline-dark" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Carrito
                            <span class="badge bg-dark text-white ms-1 rounded-pill">
                                @ViewBag.CantidadTotal
                            </span>
                        </button>
                    </form>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p class="userName">@userName</p>
                    }
                    else
                    {
                        <p>Bienvenido, invitado. Inicia sesión para continuar.</p>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Login" asp-action="Logout" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Cerrar Sesion</button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Login" asp-action="Index" class="btn btn-primary">Iniciar Sesion</a>
                    }

                </div>
            </div>
        </nav>

        <!-- Header-->
        <header class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="image-container">
                    <img src="img/Fondo Web.png" alt="Logo">
                    <h1 class="text-overlay">E-Commerce Unlz</h1>
                </div>
            </div>
        </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center">
        <div class="container p-4">
            <section class="mb-4">
                <a class="btn btn-outline-white btn-floating m-1" href="#!" role="button"><i class="fab fa-facebook-f"></i></a>
                <a class="btn btn-outline-white btn-floating m-1" href="#!" role="button"><i class="fab fa-twitter"></i></a>
                <a class="btn btn-outline-white btn-floating m-1" href="#!" role="button"><i class="fab fa-google"></i></a>
                <a class="btn btn-outline-white btn-floating m-1" href="#!" role="button"><i class="fab fa-instagram"></i></a>
                <a class="btn btn-outline-white btn-floating m-1" href="#!" role="button"><i class="fab fa-linkedin-in"></i></a>
                <a class="btn btn-outline-white btn-floating m-1" href="#!" role="button"><i class="fab fa-github"></i></a>
            </section>
        </div>
        <section class="text-white">
            <h2 class="text-center">CONTACTO</h2>
            <div class="container text-center text-md-start mt-3">
                <div class="row">
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-3">
                        <h6 class="text-uppercase fw-bold mb-3">Direccion</h6>
                        <p>Don Bosco 3729, Bs As</p>
                    </div>
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-3">
                        <h6 class="text-uppercase fw-bold mb-3">Telefono</h6>
                        <p>+ 01 234 567 88</p>
                    </div>
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-3">
                        <h6 class="text-uppercase fw-bold mb-3">Email</h6>
                        <p>Grupo2@Unlz.com</p>
                    </div>
                </div>
            </div>
        </section>
        <div class="text-center p-4 text-white" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2024 E-Commerce Unlz
            <a class="text-reset fw-bold">Grupo2</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
