@model e_Commerce.Muebles.WebAdmin.Models.ProductoModel

@{
    ViewBag.Title = "Crear Producto";
}

<h2>Crear Producto</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input type="text" class="form-control" asp-for="Nombre" />
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input type="text" class="form-control" asp-for="Descripcion" />
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input type="number" class="form-control" asp-for="Precio" />
    </div>
    <div class="form-group">
        <label asp-for="Stock"></label>
        <input type="number" class="form-control" asp-for="Stock" />
    </div>
    <div class="form-group">
        <label asp-for="ProveedorId"></label>
        <input type="number" class="form-control" asp-for="ProveedorId" />
    </div>
    <div class="form-group">
        <label asp-for="CategoriaId"></label>
        <input type="number" class="form-control" asp-for="CategoriaId" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>