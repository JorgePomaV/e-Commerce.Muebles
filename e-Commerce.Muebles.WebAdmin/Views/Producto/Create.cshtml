@model e_Commerce.Muebles.WebAdmin.Models.ProductoModel

@{
    ViewBag.Title = "Crear Producto";
}

<h2>Crear Producto</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="nombre"></label>
        <input type="text" class="form-control" asp-for="nombre" />
    </div>
    <div class="form-group">
        <label asp-for="descripcion"></label>
        <input type="text" class="form-control" asp-for="descripcion" />
    </div>
    <div class="form-group">
        <label asp-for="precio"></label>
        <input type="number" class="form-control" asp-for="precio" />
    </div>
    <div class="form-group">
        <label asp-for="stock"></label>
        <input type="number" class="form-control" asp-for="stock" />
    </div>
    <div class="form-group">
        <label asp-for="proveedor_id"></label>
        <input type="number" class="form-control" asp-for="proveedor_id" />
    </div>
    <div class="form-group">
        <label asp-for="categoria_id"></label>
        <input type="number" class="form-control" asp-for="categoria_id" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>