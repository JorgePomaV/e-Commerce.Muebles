@model IEnumerable<e_Commerce.Muebles.WebAdmin.Models.ProductoModel>

@{
    ViewBag.Title = "Lista de Productos";
}

<h2>Lista de Productos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo Producto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Categoria_id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
                <td>@item.precio</td>
                <td>@item.stock</td>
                <td>@item.categoria_id</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id_producto" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.id_producto" class="btn btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.id_producto" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
