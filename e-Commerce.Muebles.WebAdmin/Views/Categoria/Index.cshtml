@model IEnumerable<e_Commerce.Muebles.Entidades.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoria)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_categoria }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Details", "Details", new {  id=item.id_categoria  }, new { @class = "btn btn-info" }) 
                @Html.ActionLink("Delete", "Delete", new {  id=item.id_categoria  }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
